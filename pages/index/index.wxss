/**index.wxss**/

.button_container{
  width: 90%;
  flex-direction: row;
  display: flex;
  align-items: left;
  background-color: #fffffe;
  border-radius: 4%;
  height: 20vw;
  margin-top: 3%;
  box-shadow:0 3rpx 5rpx 1rpx #27272799
}

.button_widget{
  margin-left: 5%;
  width: 40%;
  /*background-color: rgb(207, 34, 34);*/
  flex-direction: row;
  display: flex;
}

.button_mainpage{
  width: 20vw;
  height: 20vw;
  border-radius: 50%;
}

.button_text_container{
  margin-left: 4%;
  flex-direction: column;
  display: flex;
  align-items: left;
  margin-top: 5%;
}
.button_text_big{
  margin-top: 7%;
  font-size: 30rpx;
  color: rgb(7, 7, 7);
}

.button_text_small{
  font-size: 15rpx;
  margin-top: 7%;
  color: rgb(88, 84, 84);
}



/*This block contains header*/
.top_container{
  flex-direction: column;
  display: flex;
  align-items: left;
  width: 90%;
  height: 60vw;
  background-color: #35465C;
  border-radius: 5%;
}
.logo_container{
  margin-left: 5rpx;
  flex-direction: row;
  display: flex;
  align-items: left;
  width: 80vw;
  height: 20vw;
  margin-top: 40%;
  margin-left: 3%;
}
.info_container{
  flex-direction: column;
  display: flex;
  margin-left: 2%;
  margin-top: 10%;
  align-items: left;
  width: 40%;
}
.address_container{
  flex-direction: row;
  display: flex;
  align-items: left;
  width: 100%;
  
}

.logo{
  width: 20vw;
  height: 20vw;
  display: flex;
  border-radius: 50%;
  overflow: hidden;
}
.dianming{
  font-size: 30rpx;
  color: rgb(250, 248, 248);
}

.location_logo{
  width: 3vw;
  height: 3vw;
  display: flex;
  border-radius: 50%;
  overflow: hidden;
}

.info_text{
  font-size: 18rpx;
  margin-left: 3%;
  color: rgb(250, 248, 248);
}


.session-header{
  flex-direction: column;
  display: flex;
  align-items: left;
  width: 600rpx;
  margin-top: 30rpx;
}

/* This block contains movie recommand*/
.movie-content {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.movie-wrapper {
  display: inline-block;
  margin-left: 10rpx;
  margin-right: 10rpx;
  color: #9e9e9e;
}
.poster-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movie-wrapper .wish-count {
  color: #9e9e9e;
  font-size: 24rpx;
  font-weight: 500;
}

.movie-wrapper .name {
  width: 200rpx;
  color: #4a4a4a;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  line-height: 1.6;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}


.movie-wrapper .poster {
  width: 200rpx;
  height: 280rpx;
}





.poster-wrapper .poster {
  width: 200rpx;
  height: 280rpx;
}

.poster-detail{
  width: 60%;
  display: flex;
}

.poster-wrapper .name {
  width: 200rpx;
  color: #4a4a4a;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  line-height: 1.6;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}



.movie-wrapper .wish-count {
  color: #9e9e9e;
