/* components/short-view/sv.wxss */

.content{
  position: absolute;
  z-index: 1;
  display: flex;
  margin-left: 10%;
  margin-top: 20%;
}
.container{
  width: 100%;
  height: 600rpx;
  margin: 0;
  padding: 0;
  position: relative;
}
.back-img{
  position: absolute;
  width: 100%;
  height: 810rpx;
  filter: blur(10px) opacity(80%)
}

/* main container */


.detail-wrapper{
  margin-top: 3%;
  width: 750rpx;
  display: flex;
}

.info-container{
  width: 60%;
  height: 280rpx;
  margin-left: 3%;
  flex-direction: column;
  display: flex;
}

.people_info{
  flex-direction: row;
  width: 100%;
  display: block;
}
.people_image{
  width: 25rpx;
  height: 25rpx;
}

.catogory-container{
  width: 70%;
  height: 30rpx;
  display: flex;
}

.catogory_icon_first_child{
  width: 60rpx;
  height: 30rpx;
  text-align: center;
  background-color: rgb(201, 188, 188);
  border-radius: 15%;
  display: block;
}
.catogory_icon{
  width: 60rpx;
  height: 30rpx;
  text-align: center;
  background-color: rgb(201, 188, 188);
  border-radius: 15%;
  margin-left: 2%;
  display: block;
}
.textbox{
  height: 40%;
  margin-right: 2%;
  background-color: rgb(248, 26, 26);
}

/* text settings */
.name {
  width: 750rpx;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 1.6;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.price {
  width: 750rpx;
  color: #ffffff;
  font-size: 20rpx;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.people {
  width: 750rpx;
  color: #ffffff;
  font-size: 20rpx;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.catogory_text{
  font-size: 18rpx;
  color: #ffffff;
  display: block;
}
.discription{
  height: 40%;
  font-size: 22rpx;
  color: #4a4a4a;
  line-height: 38rpx;
  
  text-overflow: ellipsis;
  overflow: hidden;
  display: block;
  word-break: break-all;
}

/*poster image*/
.poster {
  width: 200rpx;
  height: 280rpx;
  border-radius: 5%;
}

